<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><%= changeDateFormat(@calendar.month) %>のカレンダー編集</h5>
    </div>
    <div class="modal-body">
        <%= form_for(@calendar) do |form| %>
            <%= render "shared/error_messages", object: form.object %>
            <div class="form-group">
                <label for="content">内容</label>
                <%= form.text_area :content, class: "form-control" %>
            </div>
            <div class="form-group">
                <label for="temperature">気温</label>
                <%= form.select :temperature, -100..60, { include_blank: true, selected: 1 },{ class: "form-control" } %>
            </div>
            <%= form.file_field :picture, accept: "image/jpeg,image/gif,image/png", class: "form-control-file" %>
            <%= form.submit "変更", class: "btn btn-primary btn-block" %>
        <% end %>
    <div>
  </div>
</div>