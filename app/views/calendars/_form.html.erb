<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-body bg-light p-4">
        <h5><%= changeDateFormat(@calendar.month) %>のカレンダー編集</h5>
        <div class="dropdown-divider mb-4"></div>
        <%= form_for(@calendar, remote: true) do |form| %>
            <div class="error_messages"></div>
            <div class="form-group">
                <label for="content">内容</label>
                <%= form.text_area :content, rows: "5", class: "form-control" %>
            </div>
            <div class="form-group">
                <label for="temperature">気温</label>
                <%= form.select :temperature, -100..60, { include_blank: true, selected: 1 },{ class: "form-control" } %>
            </div>
            <div class="form-group">
                <label for="temperature">植物の画像</label>
                <%= form.file_field :picture, accept: "image/jpeg,image/gif,image/png", class: "form-control-file" %>
            </div>
            <%= form.submit "登録する", class: "btn btn-primary btn-block" %>
        <% end %>
    <div>
  </div>
</div>