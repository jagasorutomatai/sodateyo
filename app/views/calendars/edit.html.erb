<div class='d-flex justify-content-center'>
    <div class="card" style="width: 32rem;">
        <h5 class="card-header "><%= "#{@calendar.month}月のカレンダー作成" %></h5>
        <div class="card-body">
            <%= form_for(@calendar) do |form| %>
                <%= render "shared/error_messages", object: form.object %>
                <div class="form-group">
                    <label for="month">月</label>
                    <%= form.select :month, 1..12, { include_blank: true, selected: 1 },{ class: "form-control" } %>
                </div>
                <div class="form-group">
                    <label for="content">内容</label>
                    <%= form.text_area :content, class: "form-control" %>
                </div>
                <div class="form-group">
                    <label for="temperature">気温</label>
                    <%= form.select :temperature, -100..60, { include_blank: true, selected: 1 },{ class: "form-control" } %>
                </div>
                <div class="form-group">
                    <div class="input-group date" data-target-input="nearest">
                        <%= form.text_field :planted_at, id: "planted_at", class: "form-control datepicker", data: { target: '#planted_at'} %>
                        <div class="input-group-append" data-target="#planted_at" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <%= form.file_field :picture, accept: "image/jpeg,image/gif,image/png", class: "form-control-file" %>
                <%= form.submit "カレンダー作成", class: "btn btn-primary btn-block" %>
            <% end %>
        </div>
    </div>
</div>

<script type="text/javascript">
$(function () {
    $('#datetimepicker4').datetimepicker({
        format: 'L'
    });
});
</script>