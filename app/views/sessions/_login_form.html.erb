<%= form_for(:session, url: login_path) do |form| %>
    <div class="form-group">
        <label for="email">メールアドレス</label>
        <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
        <label for="password">パスワード</label>
        <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :remember_me, class: "checkbox inline" do %>
            <%= form.check_box :remember_me %>
            <span>ログイン情報を記憶する</span>
        <% end %>
    </div>
    <%= form.submit "ログインする", class: "btn btn-primary btn-block mb-4" %>
<% end %>
<div class="dropdown-divider"></div>
<p>アカウントをお持ちですか? <%= link_to '今すぐアカウント作成', signup_path %></p>