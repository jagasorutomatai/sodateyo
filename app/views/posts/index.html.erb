<div class="row d-flex justify-content-center">
  <div class="col-sm-10 mt-3">
    <h4>植物検索</h4>
    <div class="dropdown-divider"></div>
  </div>
  <div class="col-sm-10 mt-3">
    <%= search_form_for @search, url: posts_index_path do |form| %>
        <div class="input-group">
            <div class="input-group-prepend">
                <%= form.collection_select :prefecture_name_cont, Prefecture.all, :name, :name, {include_blank: true},{ class: "form-control" } %>
            </div>
            <%= form.search_field :title_or_content_or_user_name_cont, placeholder: "検索キーワードを入力", class: "form-control" %>
            <div class="input-group-append">
                <%= form.submit "検索", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
  </div>
  <div class="col-sm-10 mt-4">
    検索結果: <strong><%= @posts.total_count %></strong>件
    <div class=" d-flex justify-content-center">
        <%= paginate @posts %>
    </div>
    <%= render 'posts_list', posts: @posts %>
    <div class=" d-flex justify-content-center">
        <%= paginate @posts %>
    </div>
  </div>
</div>